{
    "visualize": {
        "outputDir": "./performance/charts",
        "defaultFormat": "both",
        "chartSize": {
            "width": 800,
            "height": 400
        },
        "colors": {
            "primary": "rgb(75, 192, 192)",
            "secondary": "rgb(255, 99, 132)",
            "tertiary": "rgb(153, 102, 255)"
        },
        "fonts": {
            "family": "Arial, sans-serif",
            "size": {
                "title": 16,
                "axis": 12,
                "label": 14
            }
        }
    },
    "analyze": {
        "defaultType": "detailed",
        "thresholds": {
            "executionTime": 500,
            "memoryUsage": 100,
            "throughput": 1000
        },
        "alerts": {
            "performance": {
                "warning": 0.8,
                "critical": 0.9
            },
            "memory": {
                "warning": 0.7,
                "critical": 0.85
            }
        }
    },
    "watch": {
        "interval": 5,
        "autoGenerate": true,
        "notifications": true,
        "retention": {
            "days": 30,
            "maxFiles": 1000
        }
    },
    "reporting": {
        "format": "html",
        "includeSystemInfo": true,
        "includeTrends": true,
        "groupBy": "environment",
        "metrics": [
            "execution_time",
            "memory_usage",
            "throughput",
            "time_complexity",
            "memory_complexity"
        ]
    }
}
